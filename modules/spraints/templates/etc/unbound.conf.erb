server:
  interface: 127.0.0.1
<% @listen.each do |addr| %>  interface: <%= addr %>
<% end %>
<% @allowed.each do |cidr| %>  access-control: <%= cidr %> allow
<% end %>
  hide-identity: yes
  hide-version: yes

forward-zone:
  name: "."
  forward-addr: 8.8.8.8
