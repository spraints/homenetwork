# Based on http://www.openbsd.org/faq/pf/example1.html
server:
  hide-identity: yes
  hide-version: yes
<% @listen.each do |addr| %>  interface: <%= addr %>
<% end %><% @allowed_clients.each do |cidr| %>  access-control: <%= cidr %> allow
<% end %>

forward-zone:
  name: "."
<% @root_nameservers.each do |addr| %>  forward-addr: <%= addr %>
<% end %>
