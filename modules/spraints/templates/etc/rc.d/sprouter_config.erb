daemon=<%= @install_dir %>/bin/rails
daemon_flags="server --daemon --binding=0.0.0.0 --port=4433"

. /etc/rc.d/rc.subr

rc_reload=NO
pexp="/usr/local/bin/ruby22 ${daemon}${daemon_flags:+ ${daemon_flags}}"

rc_pre() {
  ${rcexec} "cd <%= @install_dir %> && export RAILS_ENV=production && bin/rake db:migrate assets:precompile"
}

rc_start() {
  ${rcexec} "cd <%= @install_dir %> && export RAILS_ENV=production && ${daemon} ${daemon_flags}"
}

rc_cmd $1
